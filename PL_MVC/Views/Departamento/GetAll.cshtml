
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model ML.Departamento



<div class="container">
    <div class="row">
        <h2><i class="fa-solid fa-store fa-fade"></i> Departamentos</h2>
        <hr />
    </div> <!--row-->

    <div class="row">
        <div style="float:right">
            @Html.ActionLink("Agregar Departamento", "Form", "Departamento", htmlAttributes: new { @class = "btn btn-success" })
            <hr />
        </div><!--style-->
    </div><!--row-->

    <div class="row" style="text-align:center">
        <div class="col-6 col-md-2"></div>
        <div class="col-6 col-md-7">

            @if (Model.Departamentos != null)
            {

                <table class="table table-bordered table-responsive">
                    <thead>
                        <tr>
                            <td class="text-center col-xs-1" style="font-weight:bold;">Editar</td>
                            <td class="text-center col-xs-1" style="font-weight:bold;">Eliminar</td>

                            <td class="hidden">IdDepartamento</td>
                            <td class="text-center" style="font-weight:bold;">Nombre</td>
                            <td class="hidden">IdArea</td>
                            <td class="text-center" style="font-weight:bold;">Area</td>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (ML.Departamento departamento in Model.Departamentos)
                        {
                            <tr>
                                <td class="text-center">
                                    <a class="btn btn-warning glyphicon glyphicon-edit"
                                       href="@Url.Action("Form", "Departamento",
                                                            new { IdDepartamento = departamento.IdDepartamento })"></a>

                                </td>
                                <td class="text-center">
                                    <a class="btn btn-danger glyphicon glyphicon-trash"
                                       href="@Url.Action("Delete","Departamento",
                                                            new { IdDepartamento = departamento.IdDepartamento })"></a>
                                </td>

                                <td class="hidden">@departamento.IdDepartamento</td>
                                <td class="col-sm-1">@departamento.Nombre</td>
                                <td class="hidden">@departamento.Area.IdArea</td>
                                <td class="col-sm-2">@departamento.Area.Nombre</td>

                            </tr>
                        }
                    </tbody>
                </table>
            }

            else
            {
                <div class="alert alert-danger" role="alert">Ocurrio un error!!</div>
            }

        </div>
            
    </div>

</div><!--container-->

    



